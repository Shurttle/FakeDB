<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FakeDB.ItemDetailPage"
             Title="ItemDetailPage">
    
    <StackLayout Padding="30">
        <Label Text="{Binding Item.Name}" FontSize="24" HorizontalOptions="Center" />
        <Label Text="{Binding Item.Description}" FontSize="18" HorizontalOptions="Center" />
        <Button Text="Go Back" Clicked="OnGoBackClicked" />
    </StackLayout>
</ContentPage>